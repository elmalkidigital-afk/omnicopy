/**
 * This ruleset enforces a strict user-ownership model.
 * - All user-generated content is stored in subcollections under `/users/{userId}`.
 * - This path-based security ensures users can only access their own data.
 * - Listing the top-level `/users` collection is forbidden to protect privacy.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // A user can create their own document, and the doc ID must match their UID.
    // The `id` field inside the document must also match their UID.
    function isCreatingOwnUserDoc(userId) {
      return isOwner(userId) && request.resource.data.id == userId;
    }

    // When creating a subcollection document, the `userId` field must match the
    // authenticated user's UID.
    function isCreatingOwnedSubDoc(userId) {
      return isOwner(userId) && request.resource.data.userId == userId;
    }

    // The `userId` field linking a subcollection document to its owner is immutable.
    function isUserIdImmutable() {
      return request.resource.data.userId == resource.data.userId;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // A user can only get, update, or delete their own document.
      allow get, update, delete: if isOwner(userId);
      
      // A user can create their own document.
      allow create: if isCreatingOwnUserDoc(userId);
      
      // Listing all user documents is forbidden.
      allow list: if false;

      // Rules for the 'productDescriptions' subcollection
      match /productDescriptions/{descriptionId} {
        // A user can CRUD and list their own product descriptions.
        allow list, get: if isOwner(userId);
        allow create: if isCreatingOwnedSubDoc(userId);
        allow update: if isOwner(userId) && isUserIdImmutable();
        allow delete: if isOwner(userId);
      }
    }
  }
}

    